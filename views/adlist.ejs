<div class="container">
    <div class="row">
      <div class="col-sm-4">&nbsp;</div>
      <div class="col-sm-4">
        <h2>Ad List</h2>

      </div>
      <div class="col-sm-8">
        <table class="table table-bordered">
          
          <% if(postdata.length>0) { %>
            <tr>
              <td>Sno</td>
              <td>Photo</td>
              <td>Title</td>
              <td>Price</td>
              <td>Action</td>
            </tr>
          <% postdata.forEach((list,index)=>{ %>
            <tr>
              <td><%= index+1 %></td>
              <td><img src="/uploads/<%= list.photo %>" width="80" height="70"/></td>
              <td><%= list.title %></td>
              <td><%= list.price %></td>
              <td>
                <a href="/adview/<%= list._id %>" type="button" class="btn btn-primary btn-small">View</a>
                <a href="/adedit/<%= list._id %>" type="button" class="btn btn-success btn-small">Edit</a>
                <a href="/addelete/<%= list._id %>" type="button" class="btn btn-danger btn-small">Delete</a>
              </td>
            </tr>
          <% }) %>
          <% } else{ %>
            <tr>
              <td colspan="4"><h4>No Record Found</h4></td>
            </tr>
          <% } %>
        </table>
        <% if(postdata.length>0) { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="/adlist/?page=1">First</a></li>
            <% for(i=1;i<=pages;i++){ %>
            <% if(currentPage==i){ %>
            <li class="page-item disabled"><a class="page-link" href="#"><%= i %></a></li>
            <% } else{ %>
              <li class="page-item"><a class="page-link" href="/adlist/?page=<%= i %>"><%= i %></a></li>  
            <% } } %>
            <li class="page-item"><a class="page-link" href="/adlist/?page=<%= pages %>">Last</a></li>
          </ul>
        </nav>
        <% } %>
      </div>
    </div>

  </div>